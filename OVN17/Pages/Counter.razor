@page "/counter"
@using static OVN17.Pages.Index
@using static OVN17.Pages.FetchData

<PageTitle>Counter</PageTitle>

<h1>Change device config</h1>

<div class="input-group">
    <input @bind="test"  type="text" class="form-control" placeholder=" DeviceData" >
    <div class="input-group-append">
<button @onclick="OnAdd" @onclick:preventDefault="true" type="submit" class="btn btn-info">Add</button>
    </div>
</div>




<h1>@test</h1>


@code {
    
    private string test  = string.Empty;
    [Parameter]
    public EventCallback<string> Add { get; set; } 
    public async Task OnAdd()
    {
        
        await Add.InvokeAsync(test);
    }
}





